nav
	z-index 999
	overflow hidden
	width 100%
	margin 3rem auto 0 auto
	position sticky
	top 0rem
	padding 0
	&:after
		position absolute
		bottom 0
		display block
		content ''
		width 100%
		height 100%
		z-index 100
		pointer-events none
		right -80%
		+mq('bp-4')
			right -70%
		+mq('bp-6')
			background none
	&:before
		position absolute
		bottom 0
		display block
		content ''
		width 100%
		height 100%
		z-index 100
		pointer-events none
		left -80%
		+mq('bp-4')
			right -50%
		+mq('bp-6')
			background none

	.nav-wrapper
		background-color darken(#4729fc, 7)
		padding 0 1rem

		ul
			display flex
			flex-direction row
			height 6.5rem
			//padding-bottom 0.5rem
		li
			display flex
			flex-direction column
			width 8rem
			padding 0.5rem 0.25rem 0 0.25rem
			height auto
			align-items center
			transition 300ms
			min-width 5rem
			cursor pointer
			opacity 0.5
			transform scale(0.75)
			transition all 300ms
			user-select none

			&.is-active
				opacity 1
				transform scale(1)
				//pointer-events none
			&:hover
				transform scale(1)

			.image
				margin 0 auto
				width 80%
				max-height 3rem

			.object-name
				margin 1rem 0 0 0
				text-align center
				font-size 13px

			.is-active
				.image
					width auto
					max-height 3rem

			.object-name
				font-weight 700

	.under-ul
		display flex
		justify-content space-between
		margin-top 0.25rem
		padding 0 1rem

		.nav-hint
			display flex
			visibility visible
			&.is-hidden
				visibility hidden

			svg
				margin 0.4rem 0 0 0.15rem
				animation bounceRight 1s infinite
				position relative
				left 0

			p
				margin 0.5rem 0 0 0
				set-type-size('x-small', true)
				+mq('bp-3')
					set-type-size('small', true)

		.autoplay
			color $white
			text-transform uppercase
			background-color transparent
			font-family $atlas
			font-weight 700
			display flex
			justify-content space-between

			.play-pause
				height 45px
				width 45px
				background-color white
				border-radius 50%
				padding 0.5rem
				margin 0.5rem 0 0 0

			p
				margin 0.5rem 0 0 0
				width 3rem
				text-align left
				set-type-size('x-small', true)
				+mq('bp-3')
					set-type-size('small', true)

			.play-icon
				position relative
				left 0.1rem

.text-hint
	display flex
	position fixed
	bottom 0.5rem
	right 1rem
	visibility hidden
	&.is-visible
		visibility visible

	svg
		margin 0.4rem 0 0 0.15rem
		animation bounceUp 1s infinite
		position relative
		bottom 0

	p
		margin 0.5rem 0 0 0
		set-type-size('x-small', true)
		+mq('bp-3')
			set-type-size('small', true)

@keyframes bounceUp {
  0%       { bottom:1px; }
  25%, 75% { bottom:2px; }
  50%      { bottom:3px; }
  100%     { bottom:0; }
}

@keyframes bounceRight {
  0%       { left:1px; }
  25%, 75% { left:2px; }
  50%      { left:3px; }
  100%     { left:0; }
}
